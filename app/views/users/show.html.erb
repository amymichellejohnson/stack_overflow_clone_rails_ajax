<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h2><%= @user.username %></h2>

    <% if @user.questions.any? %>
      <h4>Questions from <%= @user.username %></h4>
      <ul class="list-group">
        <% @user.questions.each do |question| %>
          <li class="list-group-item">
            <%= link_to question.title, question_path(question) %><span class="badge"><%= question.responses.count %></span>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-sm-3"></div>
</div>
