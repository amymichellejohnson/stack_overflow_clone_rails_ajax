<div class="row">

<div class="col-sm-3"></div>

<div class="col-sm-6">
  <h1>Users</h1>
  <ul class="list-group">
    <% @users.each do |user| %>
    <li class="list-group-item">
      <span class="badge"><%= user.questions.count %></span>
      <%= link_to user.username, user_path(user), id: "user-link-#{user.id}" %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add user", new_user_path, class: "btn btn-info btn-sm" %>
</div>

<div class="col-sm-3"></div>
</div>
