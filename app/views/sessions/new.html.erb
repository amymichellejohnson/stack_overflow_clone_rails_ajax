<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6 well">
    <h1>User login</h1>
    <%= bootstrap_form_tag url: '/login' do |f| %>
      <%= f.text_field :username %>
      <%= f.password_field :password %>
      <%= f.submit "Login", class: "btn btn-success" %>
    <% end %>
</div>
</div>
